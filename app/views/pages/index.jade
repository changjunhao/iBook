extends ../layout
block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h4
							a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
					.panel-body
						if cat.books && cat.books.length > 0
							each item in cat.books
								.col-md-2
									.thumbnail
										a(href='/book/#{item._id}')
											if item.cover.indexOf('http:') > -1
												img(src='#{item.cover}',alt='#{item.title}')
											else
												img(src='/upload/#{item.cover}',alt='#{item.title}')
										.caption
											h4= item.title
											P: a.btn.btn-primary(href='/book/#{item._id}',rol='button')
												|查看详情